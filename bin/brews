#!/bin/bash

set -o nounset
set -o xtrace
set -o errexit

BREW_FILE="${HOME}/.dotfiles/data/brews"

MISSING=$(comm -1 -3 <(brew list) ${BREW_FILE})
INSTALLED=$(comm -1 -2 <(brew list) ${BREW_FILE} | tr '\n' ' ')

brew update

if [[ ! -z ${MISSING} ]]; then
    brew install ${MISSING}
fi

if [[ ! -z ${INSTALLED} ]]; then
    brew upgrade ${INSTALLED}
fi
