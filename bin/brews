#!/bin/bash

INSTALL="brew install"

BREWS="hub tmux par urlview openssl offline-imap gpg coreutils wget lesspipe w3m pbzip2 unrar xpdf parallel reattach-to-user-namespace curl-ca-bundle leiningen psgrep ack latex-mk pdfjam"

$INSTALL git
brew update

$INSTALL mutt --with-debug --with-sidebar-patch --with-pgp-verbose-mime-patch --with-slang
$INSTALL aspell --lang=en

echo $BREWS | xargs $INSTALL

brew upgrade
brew cleanup
