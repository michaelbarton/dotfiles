#!/bin/bash -l

set -e

NAME=$1
if [ -z $NAME ]; then
    echo "Please supply a repository name."
    exit 1
fi

REPO=`grep "$NAME	" ~/.repositories | cut -f 2`
if [ -z $REPO ]; then
    echo "No repository found: $NAME."
    exit 1
fi

tmux new-window -n $NAME
tmux split-window -h
tmux split-window -v
tmux send-keys -t 1 "git clone $REPO $NAME" "C-m"
tmux send-keys -t 1 "cd $NAME" "C-m"
tmux send-keys -t 1 "git sw \`git last-branch | sed 's/origin\///'\`" "C-m"

tmux send-keys -t 0 "sleep 5 && cd $NAME && $EDITOR" "C-m"
tmux send-keys -t 2 "sleep 5 && cd $NAME" "C-m"
