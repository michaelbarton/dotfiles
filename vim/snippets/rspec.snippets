snippet help
	require File.join(File.dirname(__FILE__),'spec_helper')${1}
snippet desc
	describe "${1:description}" do
		${2}
	end
snippet bef
	before(:${1:each}) do
		${2}
	end
snippet aft
	after(:${1:each}) do
		${2}
	end
snippet it
	it "should ${1:description}" do
		${2}
	end
snippet sheq
	${1:target}.should == ${2}
snippet shbe
	${1:target}.should be_${2:result}
