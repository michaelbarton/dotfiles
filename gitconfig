[user]
  email = mail@michaelbarton.me.uk
  name = Michael Barton
  signingkey = 6057CB48
[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  s    = status -sb
  l    = log --decorate --graph --pretty=format:\"%Cred%h%Creset - %s %Cgreen(%cr)%Creset\" --abbrev-commit --date=relative

  c    = commit --sign
  ca   = commit -a --sign
  cc   = commit --amend

  a    = add
  ap   = add --patch
  rm   = rm

  d    = diff
  ds   = diff --staged
  dt   = diff --word-diff
  lst  = diff HEAD^..HEAD

  sw   = checkout
  swb  = checkout -b
  pd   = checkout -
  b    = branch
  bd   = branch -d

  r    = rebase
  ri   = rebase --interactive
  m    = merge --no-ff

  p    = push
  pm   = push --mirror
  pt   = push --tags

  t    = tag -u mail@michaelbarton.me.uk -s

  hub  = !sh -c 'hub clone -p $1 $2' -

  undo = reset HEAD~1

  aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
  recent = !git --no-pager log --remotes -n 1 --remotes --pretty=format:"%H%n"
  name = !git for-each-ref --format='%(refname:short)' `git symbolic-ref HEAD`
  track = !BRCH=$(git name) && git branch --set-upstream $BRCH origin/$BRCH
  promote = !BRCH=$(git name) && git push origin $BRCH && git track
  demote = !BRCH=$(git name) && git push origin :$BRCH
  which = branch -a --contains

[core]
  excludesfile = /Users/mike/.gitignore
  autocrlf = input
  whitespace = trailing-space,space-before-tab
[diff]
  renames = copies
[branch]
  autosetupmerge = true
[rerere]
  enabled = true
  autoupdate = true
[github]
  user = michaelbarton
