[user]
  email = mail@michaelbarton.me.uk
  name = Michael Barton
  signingkey = 6EB517B0
[color]
  branch = auto
  diff = auto
  status = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  s    = status -sb
  l    = log --decorate --graph --pretty=format:\"%Cred%h%Creset - %s %Cgreen(%cr)%Creset\" --abbrev-commit --date=relative

  c    = commit --sign
  ca   = commit -a --sign
  cc   = commit --amend

  a    = add
  ap   = add --patch
  rm   = rm

  d    = diff
  ds   = diff --staged
  dt   = diff --word-diff
  lst  = diff HEAD^..HEAD

  sw   = checkout
  swb  = checkout -b
  pd   = checkout -
  b    = branch
  bd   = branch -d

  r    = rebase
  ri   = rebase --interactive
  m    = merge --no-ff --gpg-sign

  p    = push
  pm   = push --mirror
  pt   = push --tags

  t    = tag -u mail@michaelbarton.me.uk -s

  hub  = !sh -c 'hub clone -p $1 $2' -

  undo = reset HEAD~1

  aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
  name = !git for-each-ref --format='%(refname:short)' `git symbolic-ref HEAD`
  promote = !BRCH=$(git name) && git push origin $BRCH && git branch --set-upstream-to=origin/$BRCH
  demote = !BRCH=$(git name) && git push origin :$BRCH
  which = branch -a --contains
  me = !gitme

  last-commit = !git --no-pager log --max-count 1 --remotes --pretty=format:"%H%n"
  last-branch = for-each-ref --count 1 --sort=-committerdate refs/remotes/ --format='%(refname:short)'

  hotfix = !git checkout -b hotfix && git commit -a --sign && git checkout - && git merge --no-ff --gpg-sign -

[core]
  excludesfile = /Users/mike/.gitignore
  autocrlf = input
  whitespace = trailing-space,space-before-tab
[diff]
  renames = copies
[branch]
  autosetupmerge = true
[rerere]
  enabled = true
  autoupdate = true
[github]
  user = michaelbarton
[push]
	default = matching
