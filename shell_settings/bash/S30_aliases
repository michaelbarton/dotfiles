#!/bin/bash

alias af='./script/autofeature'
alias at='./script/autotest'

alias dot='cd ~/.dotfiles'

# Git shortcut
alias g='git'

# Personal log
alias log='add_log_entry'

# These have to be functions because ls is aliased to coreutils gls
alias lls='ls -l --color=auto'
alias lst='ls -ltr --color=auto'

alias vim='vim -w ~/.vim/log "$@"'

# Vim instead of vi
alias vi='vim'

# Quiet R
alias R='R --quiet --no-save --no-restore'

# Quiet octave
alias octave='octave --quiet'

# Print grep results in color
alias grep='grep --color=auto'

# Tmux

function tkw { tmux kill-window -t $1 }
function tks { tmux kill-session -t $1 && tmux list-session}
function tss { tmux switch-client -t $1 }
function tls { tmux list-session }
