#!/bin/bash

# Vim in full screen mode
alias dvim='gvim +"call ToggleWindowSize()"'

alias dot='~/.dotfiles'
alias zen='~/.zen'
alias cache='~/cache'

# Shortcut to aspell that sorts dictionary afterwards
function sp(){aspell -c "$@" && ~/.dotfiles/bin/sort_dictionary}

# Make git github aware
function git(){hub "$@"}

# Git shortcut
alias g='git'

# These have to be functions because ls is aliased to coreutils gls
function lls(){ls -l --color=auto $@}
function lst(){ls -ltr --color=auto $@}
function ls(){ls --color=auto $@}

# Vim instead of vi
alias vi='vim'

# Quiet R
alias R='R --quiet --no-save --no-restore'

# Quiet octave
alias octave='octave --quiet'

# Print grep results in color
alias grep='grep --color=auto'

alias sc='starcluster'
