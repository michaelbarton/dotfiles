#!/bin/zsh

setopt prompt_subst
autoload colors
colors

reset="%{%b%s%u$reset_color%}"
current_directory="%{$fg_bold[cyan]%c%}"
end="%{$fg_bold[red]%} : "

function git-prompt() {

  if [ -d .git ]; then
    branch=$(git name)
    if [[ -z $branch ]]; then
      echo ""
    else
      if [[ $(git-dirty) = 1 ]]; then
        dirty_color=$fg_bold[red]
      else
        dirty_color=$fg[green]
      fi
      echo "%{$fg_bold[blue]%} (%{$dirty_color%}$branch%{$reset_color%}%{$fg_bold[blue]%})"
    fi
  fi;

}

PROMPT='\
$reset\
$current_directory\
$reset\
$(git-prompt)\
$reset\
$end\
$reset\
'
