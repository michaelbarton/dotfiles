#!/bin/zsh

# Vim in full screen mode
alias dvim='gvim +"call ToggleWindowSize()"'

alias dot='cd ~/.dotfiles'

autoload zmv
alias mmv='noglob zmv -W'

# Global aliases
alias -g X='| xargs'
alias -g XX='| xargs -I {}'
alias -g X0='| xargs -0'
alias -g XX0='| xargs -0 -I {}'

# Suffix based aliases
alias -s tar.gz='tar xzf'
alias -s tgz='tar xzf'
alias -s tar.bz2='tar xjf'
alias -s gz=gunzip
alias -s bz2=bunzip2
alias -s zip=unzip

alias -s rb='ruby -rubygems'
alias -s py=python

# Avoid spelling corrections on certain commands
alias mv='nocorrect mv'
alias cp='nocorrect cp'
alias mkdir='nocorrect mkdir'

# Shortcut to aspell that sorts dictionary afterwards
function sp(){aspell -c "$@" && ~/.dotfiles/bin/sort_dictionary}

# Make git github aware
function git(){hub "$@"}

# Git shortcuts

alias gc='git commit'
alias gca='git commit -a'
alias ga='git add -u'
alias gap='git add --patch'
alias grm='git rm'


alias gs='git status -sb'
alias gl='git log --decorate --graph --pretty=format:"%Cred%h%Creset - %s %Cgreen(%cr)%Creset" --abbrev-commit --date=relative'

alias gd='git diff'
alias gds='git diff --staged'
alias gdt='git diff --word-diff'
alias glast='git diff HEAD~1..HEAD'

alias gsw='git checkout'
alias gb='git branch'
alias gbd='git branch -d'
alias gbDD='git branch -D'

alias gsub='git submodule'
alias gsubyc='git submodule foreach git pull origin master'

alias gr='git rebase'
alias gri='git rebase --interactive'
alias gm='git merge --no-ff'

alias gpo='git push origin'
alias gpu='git pull origin'

alias gsvn='git svn'


alias ls='ls -G'
alias lls='ls -l'
alias lst='ls -ltr'

# Vim instead of vi
alias vi='vim'

# Quiet R
alias R='R --quiet --no-save --no-restore' 

# Print grep results in color
alias grep='grep --color=auto'
